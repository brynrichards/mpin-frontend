</div>

<div class="mpinHeaderRow">
	{{txt "activate_header"}}
</div>

<div class="mpinMain mpPaddTop10">
	<div class="mpinCenter mpinCenter5">
		{{txt "activate_text1"}}
		
		<p class="mpinIdentityText">
			{{ data.email }}
		</p>
		
		{{txt "activate_text2"}}
		
		<p class="mpinInfoText">
			{{txt "activate_text3"}}
		</p>
    </div>
	
	<div class="mpinBtnBox mpinBtnDown">
		<div class="mpinButton" id="mpin_activate">
			{{txt "activate_btn1"}}
		</div>
