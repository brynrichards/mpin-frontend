<!-- Home/Top Nav Bar -->

<header id="topNav">
    <div id="mp_action_home">
    </div>
    <div id="logo">
    </div>
</header>

<!-- User section -->

<div id="addIdentity">
  <div class="identityHeader">{{hlp 'setup_header' }}</div>
</div>

<!-- Input button -->

<div id="identityContainer">
  <div class="inputContainer">
    
    <div class="identityElHolder">
      <div class="identityText">
          <span>{{hlp 'setup_text1' }}</span>
      </div>

      <div class="identityInput">
        <div>
          <input type="email" id="emailInput" placeholder="{{hlp 'setup_text3' }}" value="">
        
          {{#if data.setDeviceName}}
            <br><br><label for="deviceInput">{{hlp 'setup_device_label' }}</label>
            <input type="text" id="deviceInput" class="mpinInput" placeholder="{{data.deviceNameHolder}} {{hlp 'setup_device_default'}}" value="{{deviceName}}">
          {{/if}}
        </div>
      </div>
    </div>

  </div>

  <div id="bottomBtnHolder">
      <button class="mpinBtn" id="mp_action_setup">
          <span class="btnLabel">{{hlp 'setup_button_setup' }}</span>
      </button>
  </div>

  <info id="info"><i></i>Not sure which option to choose?</info>

</div>

<footer id="mpinFooter">
    <div id="mpinLogo">
    </div>

    <div id="poweredBy">
    </div>
</footer>